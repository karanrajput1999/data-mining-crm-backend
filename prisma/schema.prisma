generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id Int @id @default(autoincrement())
  username String
  email String
  password String
  campaigns Campaign[]
  users User[]
  token Int @default(0)
  isActive Int @default(0)
  userIp String
}

model User {
    id Int @id
    username String
    crmEmail String @unique
    crmPassword String
    agentMobile String @unique
    token Int @default(0)
    isActive Int @default(0)
    userIp String
    admin Admin? @relation(fields: [adminId], references: [id])
    adminId Int?
    role Int

}

model Campaign {
  id Int @id @default(autoincrement())
  campaignName String
  campaignDescription String
  campaignType String
  callback Int @default(0)
  dnc Int @default(0)
  amd Int @default(0)
  crmFields CRMField[]
  adminId Int?
  admin Admin? @relation(fields: [adminId], references: [id])
}

model CRMField{
  id Int @id @default(autoincrement())
  caption String 
  type String
  required Boolean
  readOnly Boolean
  position Int
  campaignId Int?
  campaign Campaign? @relation(fields: [campaignId], references: [id])
}

model Menu{
  id Int id @default(autoincrement())
  name String
  icon String
  status Int
  sequence Int
}

model SubMenu {
  id Int id @default(autoincrement())
  name String
  status Int
  redirect Boolean
  url String?
  menuId Int
  menu Menu? @relation(fields: [menuId], references: [id])
}

model SubMenuAssign{
   id Int id @default(autoincrement())
   menuId Int
   status Int
   roleId Int
   role Role @relation(fields: [subMenuId], references: [id])
}

model SuperSubMenu{
  id Int id @default(autoincrement())
  name String
  url String
  status Int
  subMenuId  Int
}

model SuperSubMenuAssign{
   id Int id @default(autoincrement())
   subMenuId Int
   status Int
   roleId Int
   role Role @relation(fields: [subMenuId], references: [id])
}


model Role {
  id Int id @default(autoincrement())
  name Int
  status Int
}

model RoleAssign{
  id Int id @default(autoincrement())
  roleId Int
  role Role @relation(fields: [roleId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])

}

